# Environment Variables
# Copy to .env and fill in your settings

# API Keys (if using paid services)
OPENAI_API_KEY=

# Model Configuration
WHISPER_MODEL=base
LANGUAGE=en  # or leave blank for auto-detection

# Data Paths
DATASET_PATH=./datasets/data
OUTPUT_DIR=./output

# Processing Options
SAMPLE_RATE=16000
KEEP_NEGATION=true

# Streamlit Configuration
STREAMLIT_CLIENT_THEME=dark
STREAMLIT_LOGGER_LEVEL=info
